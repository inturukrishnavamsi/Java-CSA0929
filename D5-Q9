import java.util.Scanner;

public class ReverseAndAddPalindrome {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int number = scanner.nextInt();

        int steps = reverseAndAddPalindrome(number);
        System.out.println("Palindrome obtained after " + steps + " steps.");
        scanner.close();
    }

    public static boolean isPalindrome(int num) {
        int reversed = 0;
        int original = num;

        while (num > 0) {
            int digit = num % 10;
            reversed = reversed * 10 + digit;
            num /= 10;
        }

        return original == reversed;
    }

    public static int reverseAndAddPalindrome(int num) {
        int steps = 0;

        while (!isPalindrome(num)) {
            int reversed = 0;
            int original = num;

            while (num > 0) {
                int digit = num % 10;
                reversed = reversed * 10 + digit;
                num /= 10;
            }

            num = original + reversed;
            steps++;
        }

        return steps;
    }
}
